<idea-plugin>
    <id>com.forret.llmbrains</id>
    <name>LLM Brains</name>
    <vendor email="peter@forret.com">Peter Forret</vendor>
    <version>0.3.7</version>
    <description>
        Open popular CLI coding agents (Claude, Codex, Gemini) in an IDE terminal.
    </description>
    <change-notes>
        <p>0.4.8 â€” 2025-12-10</p>
        <ul>
            <li>Added Copilot/Charm/... as coding agent - fixed problem with Classic UI</li>
        </ul>
    </change-notes>
    <depends>com.intellij.modules.platform</depends>
    <depends>org.jetbrains.plugins.terminal</depends>
    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="LLM Brains" displayType="BALLOON"/>
        <applicationConfigurable instance="com.forret.llmbrains.AgentSettingsConfigurable" displayName="LLM Brains"/>
    </extensions>
    <actions>
        <group id="com.forret.llmbrains.Dropdown" class="com.forret.llmbrains.LlmBrainsActionGroup"
               text="LLM Brains" description="Open popular CLI coding agents (Claude, Codex, Gemini) in an IDE terminal." popup="true"
               icon="/icons/palm-up-hand-noto.svg">
            <!-- New UI toolbar (2022.3+) -->
            <add-to-group group-id="MainToolbarRight" anchor="last"/>
            <!-- Classic UI: Navigation bar toolbar -->
            <add-to-group group-id="NavBarToolBar" anchor="last"/>
        </group>
    </actions>
</idea-plugin>
